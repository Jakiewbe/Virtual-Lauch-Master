{
  "name": "virtuals-launch-watcher",
  "version": "1.0.0",
  "description": "Base链上Virtuals项目的单项目打新监控器",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:all": "concurrently \"pnpm run dev\" \"pnpm run dev:web\"",
    "dev:web": "cd web && pnpm run dev",
    "build": "tsc",
    "build:web": "cd web && pnpm run build",
    "build:all": "pnpm run build && pnpm run build:web",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "ethers": "^6.10.0",
    "yaml": "^2.3.4",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}